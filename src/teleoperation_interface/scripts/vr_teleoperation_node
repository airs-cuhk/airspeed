#!/usr/bin/env python3.10
"""
VR Teleoperation Node Executable
VR遥操作节点可执行文件

ROS2可执行节点入口点
"""

import sys
import os

# 添加包路径到Python路径
package_path = os.path.join(os.path.dirname(__file__), '..')
sys.path.insert(0, package_path)

# 添加 vr_teleoperation 子目录路径
vr_teleoperation_path = os.path.join(package_path, 'vr_teleoperation')
sys.path.insert(0, vr_teleoperation_path)

# 导入并运行主函数
from vr_teleoperation_node import main

if __name__ == '__main__':
    main()
